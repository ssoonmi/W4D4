<section class='show-info'>
  <h2>Song: <%= @track.title.upcase %></h2>

  <section class='info-list'>
    <h4>Band:</h4>
    <p><%= @track.band.name %></p>

    <h4>Album:</h4>
    <p><%= @track.album.title %></p>

    <h4>Track Number:</h4>
    <p><%= @track.ord %></p>

    <%= "#{@track.is_bonus ? 'Bonus' : 'Regular'} Track"%>
    <div id='lyrics-heading'>Lyrics:</div>
  </section>
  <pre id='show-lyrics'><%= h(ugly_lyrics(@track.lyrics)) %></pre>
</section>

<section class= 'show-links'>
<%= button(edit_track_url(@track.id), 'EDIT TRACK') %>
<br/>
<%= button(band_url(@track.band.id), 'GO TO BAND') %>
<br/>
<%= button(album_url(@track.album_id), 'GO TO ALBUM') %>
<form action="<%= track_url(@track.id) %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="DELETE TRACK">
</form>
</section>
<section class='show-children'>
<h3>Notes</h3>
<h5>Make a new note</h5>
<%= render 'notes/form', track_id: @track.id %>
<br/>
<br/>
<%= render @track.notes %>
</section>
